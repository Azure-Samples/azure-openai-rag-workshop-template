{
  "name": "backend",
  "version": "1.0.0",
  "description": "ChatGPT + RAG backend service",
  "private": true,
  "type": "module",
  "exports": "./src/app.ts",
  "scripts": {
    "start": "fastify start -l info dist/app.js",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch\" \"npm:dev:start\"",
    "dev:start": "fastify start --pretty-logs --ignore-watch=.ts$ -w -l debug dist/app.js",
    "docker:build": "docker build --tag backend --file ./Dockerfile ../..",
    "docker:run": "docker run --rm --publish 3000:3000 --env-file ../../.env backend",
    "clean": "npx rimraf dist"
  },
  "dependencies": {
    "@azure/identity": "4.0.0",
    "@azure/search-documents": "12.0.0-beta.3",
    "@dqbd/tiktoken": "^1.0.7",
    "@fastify/autoload": "^5.0.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/sensible": "^5.0.0",
    "@fastify/type-provider-json-schema-to-ts": "^2.2.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.0.0",
    "fastify-cli": "^5.7.0",
    "fastify-plugin": "^4.0.0",
    "langchain": "^0.0.181"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "concurrently": "^8.2.0",
    "fastify-tsconfig": "^2.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
